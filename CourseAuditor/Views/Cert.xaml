<Page x:Class="CourseAuditor.Views.Cert"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseAuditor.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cert">

    <Grid>
        <Grid>
            <StackPanel>
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Ученик" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox>

                                    </CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Выбранный">
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel>
                    <Button Command="{Binding WriterCertCommand}" x:Name="bAddCertificates" Content="Печка" Width="100">

                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
