<Window x:Class="CourseAuditor.Views.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseAuditor.Views"
        mc:Ignorable="d"
        Title="Main"
        WindowState="Normal">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TreeView x:Name="TVCourseGroups" Grid.Row="1" ItemsSource="{Binding Courses}" SelectedItemChanged="TVCourseGroups_SelectedItemChanged">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="FontWeight" Value="Bold" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Groups}">
                    <TextBlock Text="{Binding Name}" />
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <StackPanel/>
        <DataGrid 
                  x:Name="studentsGrid"
                  AutoGenerateColumns="False"
                  Grid.Column="3" 
                  HorizontalAlignment="Left" 
                  Height="424" 
                  Margin="10,10,0,0" 
                  Grid.Row="1" 
                  VerticalAlignment="Top" 
                  Width="590" 
                  ItemsSource="{Binding Students}"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ученик" Binding="{Binding Path=Person}" Width="300"/>
                <DataGridTextColumn Header="Дата поступления" Binding="{Binding Path=DateStart}" Width="120"/>
                <DataGridTextColumn Header="Дата отчисления" Binding="{Binding Path=DateEnd}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
